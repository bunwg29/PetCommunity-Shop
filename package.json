    "md5": "^2.3.0",
    "method-override": "^3.0.0",
    "mongodb": "^6.10.0",
    "mongoose": "^8.7.2",
    "mongoose-slug-updater": "^3.3.0",
    "multer": "^1.4.5-lts.1",
    "node-sass": "^9.0.0",
    "nodemailer": "^6.9.16",
